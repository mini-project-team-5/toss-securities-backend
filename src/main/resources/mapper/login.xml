<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tossclone.securities.dao.LoginDao">

    <!-- 로그인 토큰 저장 -->
    <insert id="saveToken">
        INSERT INTO login_token (user_id, token)
        VALUES (#{userId}, #{token})
        ON DUPLICATE KEY UPDATE token = #{token}, logintime = NOW();
    </insert>

    <!-- 로그인 토큰 조회 -->
	<select id="findTokenByUserId" parameterType="long" resultType="com.tossclone.securities.dto.LoginToken">
	    SELECT * FROM login_token WHERE user_id = #{userId}
	</select>


</mapper>